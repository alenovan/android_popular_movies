<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:background="#f2f2f2">







    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">







                <!--<ImageView-->
                    <!--android:id="@+id/poster_image"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="300dp"-->
                    <!--style="@style/AndroidImageSlider_Oval_Black"-->
                    <!--android:background="#fff"-->
                    <!--android:src="@drawable/cover"-->
                    <!--android:scaleType="fitXY"-->
                    <!--/>-->
                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    style="@style/AndroidImageSlider_Oval_Black"
                    custom:pager_animation_span="1100"
                    android:background="#fff"
                    />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    >


                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:id="@+id/est"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Movie Title"
                        android:textSize="16dp"
                        android:textColor="@color/colorSub"
                        android:layout_marginLeft="16dp"
                        />




                    <!--*********wear- price**********-->

                    <LinearLayout

                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >




                        <TextView
                            android:visibility="visible"
                            android:id="@+id/judul_movies"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cold Shoulder Top"
                            android:textSize="21dp"
                            android:textColor="@color/colorTex"
                            />


                    </LinearLayout>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fbfaff"

                        >

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Release Date"
                                android:textSize="16dp"
                                android:textColor="@color/colorTex"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:padding="16dp"
                                />
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:id="@+id/company"
                                    android:layout_width="fill_parent"
                                    android:layout_height="30dp"
                                    android:text=""
                                    android:layout_marginBottom="4dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/colorTex"

                                    />


                            </LinearLayout>
                        </LinearLayout>





                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            >


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Rating"
                                android:textSize="16dp"
                                android:textColor="@color/colorTex"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:padding="16dp"
                                />
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1">


                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="45dp"
                                    android:layout_marginLeft="20dp"
                                    android:numStars="5"

                                    android:progressTint="@android:color/holo_orange_light"
                                    android:isIndicator="true"
                                    android:layout_weight="0.34" />

                            </LinearLayout>
                        </LinearLayout>





                    </LinearLayout>



                    <LinearLayout

                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >




                        <TextView

                            android:id="@+id/discription"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DESCRIPTION"
                            android:textSize="14dp"
                            android:textColor="@color/colorTex"
                            />


                        <TextView
                            android:layout_marginTop="16dp"
                            android:id="@+id/deskripsi"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="IZINC brings to you this hooded which will be a great inclusion your wardrobe. Designed to sartorial perfection, this T shirt is made of premium quality fabric and will let you stay in sheer comfort all day long.this T shirt will be the perfect pick for any occasion."
                            android:textSize="13dp"
                            android:lineSpacingExtra="4dp"
                            android:textColor="@color/colorTex"
                            />



                        <!--<View-->
                        <!--android:layout_marginTop="16dp"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:background="@color/colordevider"-->

                        <!--/>-->



                        <TextView
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="22dp"
                            android:id="@+id/addfavorite"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ADD TO FAVORITE"
                            android:textSize="14dp"
                            android:textColor="#fff"
                            android:background="@drawable/rect"
                            android:gravity="center"
                            android:padding="14dp"
                            />






                    </LinearLayout>
                    <View
                        android:layout_marginTop="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colordevider"

                        />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff">






                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="THRILER AND TEASER"
                            android:padding="16dp"
                            android:textSize="16dp"
                            android:id="@+id/text_thriller"
                            android:textColor="@color/colorSub"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"

                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colordevider"
                            android:padding="16dp"
                            />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:scrollbars="vertical" />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colordevider"

                        />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff"
                        android:id="@+id/linier_review">








                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="REVIEW"
                            android:padding="16dp"
                            android:id="@+id/text_review"
                            android:textSize="16dp"
                            android:textColor="@color/colorSub"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colordevider"
                            android:padding="16dp"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:scrollbars="vertical" />




                    </LinearLayout>












                </LinearLayout>
            </LinearLayout>
            <include
                android:id="@+id/toolbar"
                layout="@layout/tolbar_detail">

            </include>
        </RelativeLayout>
    </ScrollView>





</RelativeLayout>




